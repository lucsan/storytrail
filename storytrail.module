/**
* Implements hook_block_save().
*/
function storytrail_block_save($delta = '', $edit = array()) {
  switch ($delta) {
  case 'storytrail_block':
    variable_set('storytrail_block_configuration', $edit['storytrail_block_config']);
    break;
  }
  return;
}





